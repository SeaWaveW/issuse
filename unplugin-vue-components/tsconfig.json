{
	"compilerOptions": {
		"composite": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"#/*": ["config/*"],
			"@/*": ["src/*"]
		},
		"types": ["pinia-plugin-persist"],
		"allowJs": true
	},
	"include": [
		"src",
		"vite.config.ts",
		"package.json"
	],
	"vueCompilerOptions": {
		"target": 2.7
	}
}
